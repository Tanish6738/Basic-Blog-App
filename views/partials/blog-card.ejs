<div class="flex flex-col rounded-lg shadow-lg overflow-hidden">
    <% if (blog.coverImage) { %>
        <div class="flex-shrink-0">
            <img class="h-48 w-full object-cover" src="<%= blog.coverImage %>" alt="<%= blog.title %>">
        </div>
    <% } %>
    <div class="flex-1 bg-white p-6 flex flex-col justify-between">
        <div class="flex-1">
            <p class="text-sm font-medium text-primary-600">
                <a href="/blogs/category/<%= blog.category %>" class="hover:underline">
                    <%= blog.category %>
                </a>
            </p>
            <a href="/blogs/<%= blog._id %>" class="block mt-2">
                <p class="text-xl font-semibold text-gray-900"><%= blog.title %></p>
                <p class="mt-3 text-base text-gray-500"><%= blog.excerpt %></p>
            </a>
        </div>
        <div class="mt-6 flex items-center">
            <div class="flex-shrink-0">
                <% if (blog.author.profileImage) { %>
                    <img class="h-10 w-10 rounded-full" src="<%= blog.author.profileImage %>" alt="">
                <% } else { %>
                    <span class="h-10 w-10 rounded-full bg-primary-100 flex items-center justify-center">
                        <span class="text-primary-600 font-medium text-sm">
                            <%= blog.author.firstName[0] + blog.author.lastName[0] %>
                        </span>
                    </span>
                <% } %>
            </div>
            <div class="ml-3">
                <p class="text-sm font-medium text-gray-900">
                    <a href="/profile/<%= blog.author._id %>" class="hover:underline">
                        <%= blog.author.firstName %> <%= blog.author.lastName %>
                    </a>
                </p>
                <div class="flex space-x-1 text-sm text-gray-500">
                    <time datetime="<%= blog.createdAt %>">
                        <%= new Date(blog.createdAt).toLocaleDateString() %>
                    </time>
                    <span aria-hidden="true">&middot;</span>
                    <span><%= blog.readingTime %> min read</span>
                </div>
            </div>
        </div>
    </div>
</div>
