<header class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
            <div class="flex items-center">
                <a href="/" class="text-2xl font-bold text-primary-600">BlogApp</a>
            </div>
            <nav class="hidden md:flex space-x-8">
                <a href="/" class="text-gray-700 hover:text-primary-600 <%= path === '/' ? 'text-primary-600' : '' %>">Home</a>
                <% if (isAuthenticated) { %>
                    <a href="/blogs/new" class="text-gray-700 hover:text-primary-600 <%= path === '/blogs/new' ? 'text-primary-600' : '' %>">Write</a>
                    <a href="/profile" class="text-gray-700 hover:text-primary-600 <%= path === '/profile' ? 'text-primary-600' : '' %>">Profile</a>
                    <form action="/logout" method="POST" class="inline">
                        <button type="submit" class="text-gray-700 hover:text-primary-600">Logout</button>
                    </form>
                <% } else { %>
                    <a href="/login" class="text-gray-700 hover:text-primary-600 <%= path === '/login' ? 'text-primary-600' : '' %>">Login</a>
                    <a href="/register" class="text-gray-700 hover:text-primary-600 <%= path === '/register' ? 'text-primary-600' : '' %>">Register</a>
                <% } %>
            </nav>
            <!-- Mobile menu button -->
            <div class="md:hidden">
                <button type="button" @click="mobileMenuOpen = !mobileMenuOpen" class="text-gray-500 hover:text-gray-600">
                    <span class="sr-only">Open main menu</span>
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </div>
    </div>
    <!-- Mobile menu -->
    <div x-show="mobileMenuOpen" class="md:hidden" x-cloak>
        <div class="px-2 pt-2 pb-3 space-y-1">
            <a href="/" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50">Home</a>
            <% if (isAuthenticated) { %>
                <a href="/blogs/new" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50">Write</a>
                <a href="/profile" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50">Profile</a>
                <form action="/logout" method="POST">
                    <button type="submit" class="block w-full text-left px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50">Logout</button>
                </form>
            <% } else { %>
                <a href="/login" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50">Login</a>
                <a href="/register" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50">Register</a>
            <% } %>
        </div>
    </div>
</header>
