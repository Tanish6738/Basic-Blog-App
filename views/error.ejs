<div class="min-h-[80vh] flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-lg shadow-lg">
        <div class="text-center">
            <h1 class="text-6xl font-extrabold text-red-500 animate-pulse">
                <%= typeof statusCode !== 'undefined' ? statusCode : 500 %>
            </h1>
            <h2 class="mt-6 text-3xl font-bold text-gray-900">
                <%= typeof message !== 'undefined' ? message : 'Something went wrong' %>
            </h2>
            <p class="mt-2 text-sm text-gray-600">
                <%= typeof error !== 'undefined' ? error.message : 'An unexpected error occurred' %>
            </p>
            
            <% if (typeof error !== 'undefined' && process.env.NODE_ENV === 'development') { %>
                <div class="mt-4 p-4 bg-gray-50 rounded-lg">
                    <pre class="text-left text-xs text-gray-600 overflow-x-auto whitespace-pre-wrap">
                        <%= error.stack %>
                    </pre>
                </div>
            <% } %>
            
            <div class="mt-8 space-y-4">
                <button onclick="window.history.back()" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-blue-600 bg-blue-50 hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    Go Back
                </button>
                <a href="/" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    Return Home
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    gsap.from('.text-6xl', {
        scale: 0.5,
        opacity: 0,
        duration: 0.5,
        ease: 'back.out'
    });
    
    gsap.from('.text-3xl', {
        y: 20,
        opacity: 0,
        duration: 0.5,
        delay: 0.2,
        ease: 'power2.out'
    });
    
    gsap.from('.space-y-4', {
        y: 20,
        opacity: 0,
        duration: 0.5,
        delay: 0.4,
        ease: 'power2.out'
    });
</script>
